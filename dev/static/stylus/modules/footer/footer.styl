footer
  flex 0 0 auto
  padding 45px 0
  background-color #E6E6E6

.footer-logo-social
  margin-right 60px

  .icon
    width 204px
    height 53px
    display block
    margin-bottom 30px

.footer-social
  display flex

  a
    margin-right 15px

.footer-links-social
  display flex
  align-items center
  justify-content center
  size(25px)
  border-radius 50%

  .icon
    size(14px)
    fill #fff
    margin-bottom 0

.footer-vk
  background-color #597DA3

.footer-fb
  background-color #3B5998

.footer-tw
  background-color #55ACEE

.footer-first
  display flex

.footer-pages-item
  display flex
  margin-bottom 20px
  a
    font-family "Montserrat 500", sans-serif
    font-size 14px
    line-height 1.3

.footer-pages
  margin-right 70px
  &:last-child
    margin-right 0

.footer-blocks
  display flex

.popular-tag-title
  font-family "Montserrat 600", sans-serif
  font-size 14px
  margin-bottom 14px

.popular-tag-wrap
  margin 0 !important
  width 100%
  max-width 260px

  a
    font-family "Montserrat 500", sans-serif
    font-size 11px
    color #00B2CB
    border 1px solid #00b2cb
    border-radius: 2px;
    padding 3px 8px
    margin-right 10px
    margin-bottom 10px
    transition all linear .2s

    &:hover
      background: rgba(0, 178, 203, 0.09);

    &:active
      background: #00b2cb
      color #fff


.footer-info-wrap
  display flex
  align-items center
  margin-bottom 5px

  .icon
    size(16px)
    fill #00B2CB
    margin-right 12px

.footer-info-item--name
  font-family "Montserrat 500", sans-serif
  font-size 13px
  color #00B2CB
.footer-info-text
  font-family "Montserrat 400", sans-serif
  font-size 14px


.footer-second
  display flex
  justify-content space-between

.footer-info-item
  margin-bottom 15px

.footer-phones
  display grid
  margin-right 28px

.teamlight-383838
  display: flex;
  align-items center
  justify-content center
  background-color color383838
  padding 9px 18px
  border-radius: 2px;
  color #fff
  font-family "Montserrat 500", sans-serif
  font-size 14px
  cursor pointer

.footer-phones-and-callback
  display flex
  align-items center
