.checkout-checkbox + label
  position relative
  padding: 0;
  margin 0;
  cursor pointer
  size(22px)
  margin-right 11px
.checkout-checkbox + label:before
  content ''
  position absolute
  background-color: transparent;
  border: 1px solid rgba(56,56,56,0.31);
  border-radius: 2px;
  font-family: "Montserrat 400", sans-serif;
  font-size: 14px;
  transition: all linear 0.2s;
  width: 22px;
  height: 22px;
  margin-right: 15px;

.checkout-checkbox:checked + label:after
  content: '';
  position: absolute;
  left: 6px;
  top: 11px;
  background: #fff;
  width: 1.5px;
  height: 1.5px;
  box-shadow: 2px 0px 0 #fff, -2px 0px 0 #fff, 4px 0 0 #fff, 4px -2px 0 #fff, 4px -4px 0 #fff, 4px -6px 0 #fff, 4px -8px 0 #fff, 4px -10px 0 #fff;
  transform: rotate(45deg);

.checkout-checkbox:checked + label:before
  background-color: #00b2cb;

